<Window x:Class="nanoGrow.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nanoGrow"
        mc:Ignorable="d"
        Title="애니메이션 설정" Height="500" Width="600">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:StandardStateViewModel}">
            <StackPanel>
                <Label Content="이미지 1 경로:" />
                <DockPanel>
                    <Button Tag="Path1" Content="찾아보기..." DockPanel.Dock="Right" Margin="5,0,0,0" Click="Browse_Click" />
                    <TextBox Text="{Binding Path1, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
                </DockPanel>
                <Border BorderBrush="Gray" BorderThickness="1" Height="80" Margin="0,5,0,10">
                    <Image Source="{Binding Path1}" />
                </Border>
                <Label Content="이미지 2 경로:"/>
                <DockPanel>
                    <Button Tag="Path2" Content="찾아보기..." DockPanel.Dock="Right" Margin="5,0,0,0" Click="Browse_Click" />
                    <TextBox Text="{Binding Path2, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
                </DockPanel>
                <Border BorderBrush="Gray" BorderThickness="1" Height="80" Margin="0,5,0,0">
                    <Image Source="{Binding Path2}" />
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:BackgroundStateViewModel}">
            <StackPanel>
                <Label Content="배경 이미지 경로:" />
                <DockPanel>
                    <Button Tag="Path" Content="찾아보기..." DockPanel.Dock="Right" Margin="5,0,0,0" Click="Browse_Click" />
                    <TextBox Text="{Binding Path, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
                </DockPanel>
                <Border BorderBrush="Gray" BorderThickness="1" Height="150" Margin="0,5,0,15">
                    <Image Source="{Binding Path}" />
                </Border>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TabControl Grid.Column="0" Name="MainTabControl" TabStripPlacement="Left" BorderThickness="0,0,1,0" BorderBrush="LightGray"
                    ItemsSource="{Binding AllStates}"
                    SelectedItem="{Binding SelectedState}"
                    DisplayMemberPath="Name" />
        <Grid Grid.Column="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Grid.Row="0">
                <Run Text="{Binding SelectedState.Name, Mode=OneWay, FallbackValue=상태}" /><Run Text=" 설정"/>
            </TextBlock>
            <ContentControl Grid.Row="1" Content="{Binding SelectedState}" />
            <Button Content="저장" Grid.Row="2" HorizontalAlignment="Right" Width="100" Padding="5" Click="SaveButton_Click"/>
        </Grid>
    </Grid>
</Window>